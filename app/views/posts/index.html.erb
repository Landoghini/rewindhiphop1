<div class="container">
  <div class="col-xs-12 blog-content">
    <% @posts.each do |post| %>
    <div class="col-xs-12">

      <div class="row text-center">

        <div class ="col-md-1 media-content-image">
          <%= image_tag post.image.url(:thumb) %>
        </div>
       
        <h2 class= "col-md-11 post-title"><%= link_to post.title, post_path(post) %></h2>
       
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div class="media-content">
       <%= raw(post.caption).truncate_words(20) %>
      </div>

      
      <br>
    </div>
    <% end %>
  </div>
</div>