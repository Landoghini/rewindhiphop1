<div class="col-sm-11 col-xs-12 blog-content">
 <div class="col-md-12"
  <div class ="image">
	<%= image_tag @post.image.url(:medium) %>
 	<h2 class="show-title text-center"><%= @post.title %></h2>
  </div>
 </div>
 <div class="row content"
	  <div class="text-center"><%= @post.created_at.strftime('%b %d, %Y') %></div>
	  <div class="col-md-12 text-center"><%= raw @post.body %></div>
 </div>
 <div><%= render_shareable :buttons=> ['twitter', 'facebook'] %></div>
  <br>
 <div class="container">
  <h2>	<%= @post.comments.count %> </h2>
  	<%= render @post.comments %>
  	<h3>Add a comment...</h3>
  	<%= render partial: 'comments/form', post: @post%>
 </div>
</div>